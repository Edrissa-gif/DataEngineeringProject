COMPOSE_PROJECT_NAME=de_portfolio

# --- MinIO (acts as S3 storage) ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_HTTP_PORT=9000
S3_ENDPOINT=http://minio:9000
S3_BUCKET=data-bucket

# AWS-style keys for Spark + Hadoop (very important!)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# --- Postgres database ---
POSTGRES_USER=de_user
POSTGRES_PASSWORD=de_pass
POSTGRES_DB=de_catalog
POSTGRES_PORT=5432

# --- Airflow configuration ---
AIRFLOW__CORE__FERNET_KEY=fernetkey12345678901234567890
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__RBAC=True

# --- Spark master configuration ---
SPARK_MASTER_HOST=spark-master
SPARK_MASTER_PORT=7077

# --- Other ---
SAMPLE_ROWS=200000
